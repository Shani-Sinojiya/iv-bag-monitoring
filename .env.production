# Production Environment Variables
# Copy this file to .env and update with your production values

# Application Configuration
APP_NAME=IoT Project
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database Configuration
MONGODB_URL=mongodb://mongo:27017
DATABASE_NAME=iot_project_prod
COLLECTION_NAME=sensor_data

# MongoDB Root Credentials - CHANGE THESE IN PRODUCTION!
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Security - CHANGE THIS SECRET KEY!
SECRET_KEY=CHANGE_THIS_SECRET_KEY_FOR_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings - Update with your production domains
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]
ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=WARNING
LOG_FILE=app.log

# WebSocket Configuration
WEBSOCKET_TIMEOUT=60

# Alert Thresholds (for sensor data)
WEIGHT_THRESHOLD_MIN=0
WEIGHT_THRESHOLD_MAX=1000

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_production_email@example.com
EMAIL_PASSWORD=your_production_email_password
EMAIL_FROM=your_production_email@example.com

# Production Settings
ENVIRONMENT=production
