# Development Environment Variables
# Copy this file to .env for development

# Application Configuration
APP_NAME=IoT Project Dev
APP_VERSION=1.0.0-dev
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=iot_project_dev
COLLECTION_NAME=sensor_data

# Security
SECRET_KEY=dev_secret_key_not_for_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:8000"]
ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=app.log

# WebSocket Configuration
WEBSOCKET_TIMEOUT=60

# Alert Thresholds (for sensor data)
WEIGHT_THRESHOLD_MIN=0
WEIGHT_THRESHOLD_MAX=1000

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=dev_email@example.com
EMAIL_PASSWORD=dev_email_password
EMAIL_FROM=dev_email@example.com

# Development Settings
ENVIRONMENT=development
